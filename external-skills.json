{
  "version": "1.1.0",
  "description": "Three-tier skill configuration: builtin (1-50) < submodule (51-100) < user (101-200). Higher priority skills override lower ones when conflicts arise.",

  "priority_ranges": {
    "builtin": {
      "min": 1,
      "max": 50,
      "description": "Built-in skills bundled with Plan Cascade, lowest priority"
    },
    "submodule": {
      "min": 51,
      "max": 100,
      "description": "External skills from git submodules, medium priority"
    },
    "user": {
      "min": 101,
      "max": 200,
      "description": "User-defined skills from local paths or URLs, highest priority"
    }
  },

  "sources": {
    "builtin": {
      "type": "builtin",
      "path": "builtin-skills",
      "description": "Built-in language-agnostic skills bundled with Plan Cascade"
    },
    "vercel": {
      "type": "submodule",
      "path": "external-skills/vercel",
      "repository": "https://github.com/vercel-labs/agent-skills"
    },
    "vue": {
      "type": "submodule",
      "path": "external-skills/vue",
      "repository": "https://github.com/vuejs-ai/skills"
    },
    "rust": {
      "type": "submodule",
      "path": "external-skills/rust",
      "repository": "https://github.com/actionbook/rust-skills"
    }
  },

  "skills": {
    "python-best-practices": {
      "source": "builtin",
      "skill_path": "python",
      "detect": {
        "files": ["pyproject.toml", "requirements.txt", "setup.py", "Pipfile"],
        "patterns": []
      },
      "inject_into": ["planning", "implementation", "retry"],
      "priority": 30
    },
    "go-best-practices": {
      "source": "builtin",
      "skill_path": "go",
      "detect": {
        "files": ["go.mod", "go.sum"],
        "patterns": []
      },
      "inject_into": ["implementation", "retry"],
      "priority": 32
    },
    "java-best-practices": {
      "source": "builtin",
      "skill_path": "java",
      "detect": {
        "files": ["pom.xml", "build.gradle", "build.gradle.kts"],
        "patterns": []
      },
      "inject_into": ["implementation", "retry"],
      "priority": 34
    },
    "typescript-best-practices": {
      "source": "builtin",
      "skill_path": "typescript",
      "detect": {
        "files": ["tsconfig.json", "package.json"],
        "patterns": ["\"typescript\"", "\"@types/"]
      },
      "inject_into": ["planning", "implementation", "retry"],
      "priority": 36
    },
    "react-best-practices": {
      "source": "vercel",
      "skill_path": "skills/react-best-practices",
      "detect": {
        "files": ["package.json"],
        "patterns": ["\"react\"", "\"next\"", "\"@react\""]
      },
      "inject_into": ["planning", "implementation", "retry"],
      "priority": 100
    },
    "web-design-guidelines": {
      "source": "vercel",
      "skill_path": "skills/web-design-guidelines",
      "detect": {
        "files": ["package.json"],
        "patterns": ["\"react\"", "\"vue\"", "\"svelte\""]
      },
      "inject_into": ["implementation"],
      "priority": 55
    },
    "vue-best-practices": {
      "source": "vue",
      "skill_path": "skills/vue-best-practices",
      "detect": {
        "files": ["package.json"],
        "patterns": ["\"vue\"", "\"nuxt\"", "\"@vue\""]
      },
      "inject_into": ["planning", "implementation", "retry"],
      "priority": 100
    },
    "vue-router-best-practices": {
      "source": "vue",
      "skill_path": "skills/vue-router-best-practices",
      "detect": {
        "files": ["package.json"],
        "patterns": ["\"vue-router\""]
      },
      "inject_into": ["implementation"],
      "priority": 80
    },
    "vue-pinia-best-practices": {
      "source": "vue",
      "skill_path": "skills/vue-pinia-best-practices",
      "detect": {
        "files": ["package.json"],
        "patterns": ["\"pinia\""]
      },
      "inject_into": ["implementation"],
      "priority": 80
    },
    "rust-coding-guidelines": {
      "source": "rust",
      "skill_path": "skills/coding-guidelines",
      "detect": {
        "files": ["Cargo.toml"],
        "patterns": ["[package]", "[dependencies]"]
      },
      "inject_into": ["planning", "implementation", "retry"],
      "priority": 100
    },
    "rust-ownership": {
      "source": "rust",
      "skill_path": "skills/m01-ownership",
      "detect": {
        "files": ["Cargo.toml"],
        "patterns": ["[package]"]
      },
      "inject_into": ["implementation", "retry"],
      "priority": 90
    },
    "rust-error-handling": {
      "source": "rust",
      "skill_path": "skills/m06-error-handling",
      "detect": {
        "files": ["Cargo.toml"],
        "patterns": ["[package]"]
      },
      "inject_into": ["implementation", "retry"],
      "priority": 85
    },
    "rust-concurrency": {
      "source": "rust",
      "skill_path": "skills/m07-concurrency",
      "detect": {
        "files": ["Cargo.toml"],
        "patterns": ["tokio", "async-std", "rayon", "crossbeam"]
      },
      "inject_into": ["implementation"],
      "priority": 80
    }
  },

  "settings": {
    "max_skills_per_story": 3,
    "max_content_lines": 200,
    "cache_enabled": true
  }
}
